<div class="login">
  <div class="login-logo-wrap animated rubberBand">
    <div class="login-logo">
      通用聊天
    </div>
  </div>
  <div class="animated fadeIn">
    <div class="login-user-wrap">
      <input class="login-user" type="text" placeholder="user">
    </div>
    <div class="login-pass-wrap">
      <input class="login-pass" type="password" placeholder="pass">
    </div>
    <div class="login-confirm-wrap">
      <div  style="font-size: .5rem;line-height: .5rem;margin-bottom: .3rem;">
        <span class="login-tip"></span>
        <span class="login-repass"><a href="/forget">忘记密码</a></span>
      </div>
      <div class="login-info-wrap" style="position:absolute;top:1rem">
        <input class="login-confirm" type="button" value="登陆">
        <input class="register-confirm" type="button" value="注册">
      </div>
    </div>
  </div>
</div>